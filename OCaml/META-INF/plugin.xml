<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin url="http://code.google.com/p/intellij-ocaml/">
    <name>OCaml Support</name>
    <id>OCamlSupport</id>
    <description>OCaml language support</description>
    <change-notes>Initial release of the plugin.</change-notes>
    <version>0.2</version>
    <vendor email="maxim.manuylov@gmail.com" logo="/img/ocaml-small.png">Maxim.Manuylov</vendor>
    <category>Custom Languages</category>
    <idea-version since-build="10000"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <project-components>
        <component>
            <implementation-class>ocaml.settings.OCamlSettings</implementation-class>
        </component>
    </project-components>

    <extensions xmlns="com.intellij">
        <fileTypeFactory implementation="ocaml.lang.fileType.OCamlFileTypeFactory"/>

        <lang.syntaxHighlighterFactory key="OCAML_ML" implementationClass="ocaml.lang.feature.highlighting.OCamlSyntaxHighlighterFactory"/>
        <lang.syntaxHighlighterFactory key="OCAML_MLI" implementationClass="ocaml.lang.feature.highlighting.OCamlSyntaxHighlighterFactory"/> 
        <lang.parserDefinition language="OCAML_ML" implementationClass="ocaml.lang.fileType.ml.parser.MLParserDefinition"/>
        <lang.parserDefinition language="OCAML_MLI" implementationClass="ocaml.lang.fileType.mli.parser.MLIParserDefinition"/>
        <annotator language="OCAML_ML" implementationClass="ocaml.lang.feature.highlighting.OCamlAnnotatingVisitor"/>
        <annotator language="OCAML_MLI" implementationClass="ocaml.lang.feature.highlighting.OCamlAnnotatingVisitor"/>
        <lang.braceMatcher language="OCAML_ML" implementationClass="ocaml.lang.feature.braceMatching.OCamlBraceMatcher"/>
        <lang.braceMatcher language="OCAML_MLI" implementationClass="ocaml.lang.feature.braceMatching.OCamlBraceMatcher"/>
        <lang.foldingBuilder language="OCAML_ML" implementationClass="ocaml.lang.feature.folding.OCamlFoldingBuilder"/>
        <lang.foldingBuilder language="OCAML_MLI" implementationClass="ocaml.lang.feature.folding.OCamlFoldingBuilder"/>
        <lang.commenter language="OCAML_ML" implementationClass="ocaml.lang.feature.commenting.OCamlCommenter"/>
        <lang.commenter language="OCAML_MLI" implementationClass="ocaml.lang.feature.commenting.OCamlCommenter"/>

        <sdkType implementation="ocaml.sdk.OCamlSdkType"/>

        <moduleType id="OCAML_MODULE" implementationClass="ocaml.module.OCamlModuleType"/>
        <moduleConfigurationEditorProvider implementation="ocaml.module.OCamlModuleConfigurationEditorProvider"/>

        <toolWindow id="OCaml" anchor="bottom" secondary="false" icon="/img/ocaml-small.png"
                    factoryClass="ocaml.toolWindow.OCamlToolWindowFactory"
                    conditionClass="ocaml.toolWindow.OCamlToolWindowFactory"/>

        <compiler implementation="ocaml.compile.OCamlCompiler"/>
        <compiler implementation="ocaml.compile.OCamlLinker"/>

        <configurationType implementation="ocaml.run.OCamlConfigurationType"/>
        <configurationProducer implementation="ocaml.run.OCamlRunConfigurationProducer"/>
        <programRunner implementation="ocaml.run.OCamlRunner"/>        
    </extensions>

    <actions>
        <action id="ocaml.actions.CreateMLFileAction" class="ocaml.actions.CreateMLFileAction"
                text="OCaml Module Implementation" description="Create New OCaml Module Implementation File">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>

        <action id="ocaml.actions.CreateMLIFileAction" class="ocaml.actions.CreateMLIFileAction"
                text="OCaml Module Interface" description="Create New OCaml Module Interface File">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="ocaml.actions.CreateMLFileAction"/>
        </action>

        <separator>
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="ocaml.actions.CreateMLIFileAction"/>
        </separator>

        <action id="ocaml.actions.SwitchModuleFileAction" class="ocaml.actions.SwitchModuleFileAction"
                text="Switch Module File" description="Switch between module implementation and interface files">
            <keyboard-shortcut keymap="$default" first-keystroke="shift alt M"/>
        </action>
    </actions>
</idea-plugin>